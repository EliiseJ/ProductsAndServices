@model Open.Logic.ContactClasses.ContactDetailsModel

@{
    ViewBag.Title = "CustomerDetails";
}

<h2>Customer details</h2>


<div class="form-horizontal">
    <div class="form-group">
        @Html.LabelFor(model => model.FirstName, new { @class = "control-label col-md-2" })
        <div class="col-md-3">
            <p class="form-control-static">
                @Html.DisplayFor(model => model.FirstName)
            </p>
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.LastName, new { @class = "control-label col-md-2" })
        <div class="col-md-3">
            <p class="form-control-static">
                @Html.DisplayFor(model => model.LastName, new { htmlAttributes = new { @class = "form-control" } })
            </p>
        </div>
    </div>
    @if (Model.LendedBooks.Count > 0)
    {
        <table class="table">
            <tr>
                <th>
                    Lended Books
                </th>
                <th>
                </th>
                @foreach (var item in Model.LendedBooks)
                {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.ActionLink("Return", "ReturnBookImpl", "Product", new { id = item.UniqueId, customerId = Model.CustomerId }, null)
                    </td>
                </tr>
                }

            </table>
    }
    
</div>

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}